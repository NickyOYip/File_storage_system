<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - File Storage System</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="container">
        <h1>Welcome to Your Dashboard</h1>
        <ul class="file-list">
            <% files.forEach(function(file) { %>
                <li class="file-item">
                    <span class="file-name"><%= file.name %></span>
                    <span class="file-name"><%= file.description %></span>
                    <div class="file-actions">
                        <a href="/download/<%= file.id %>">Download</a>
                        <a href="/user/edit">Edit file description</a>
                        <a href="/user/delete">Delete</a>
                    </div>
                </li>
            <% }); %>
            <a href="/user/create">Upload File</a>
        </ul>
        <button href="/logout" function="logout()">Logout</button>
    </div>
</body>

</html>